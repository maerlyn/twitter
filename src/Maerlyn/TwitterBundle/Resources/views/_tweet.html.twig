<div class="panel panel-{% if tweet.read %}default{% else %}info{% endif %}"
     data-markasread="{{ path("maerlyn_twitter.tweet.mark_as_read", { id: tweet.id }) }}"
     data-show="{{ path("maerlyn_twitter.tweet.show", { id: tweet.id }) }}"
>
    <div class="panel-heading">
        <img src="{{ tweet.user.profileImageUrl }}" alt="{{ tweet.user.screenName }}" width="32" height="32" />
        <a href="https://twitter.com/{{ tweet.user.screenName }}">@{{ tweet.user.screenName }}</a>
        <abbr class="timeago" title="{{ tweet.createdAt|date("c") }}">{{ tweet.createdAt|date("c") }}</abbr>
    </div>

    <div class="panel-body">
        {{ tweet.text }}
    </div>

    <div class="panel-footer">
        <a href="https://twitter.com/{{ tweet.user.screenName }}/status/{{ tweet.id }}">[link]</a> |
        <a href="{{ path("maerlyn_twitter.tweet.toggle_favorite", { "id": tweet.id }) }}" class="load-and-refresh-tweet">
            <span class="glyphicon glyphicon-star"></span>{% if not tweet.favorited %} not{% endif %} favorited
        </a> |
        {% if not tweet.retweeted %}<a href="{{ path("maerlyn_twitter.tweet.retweet", { "id": tweet.id }) }}" class="load-and-refresh-tweet">{% endif %}
            <span class="glyphicon glyphicon-retweet"></span>{% if not tweet.retweeted %} not{% endif %} retweeted
        {% if not tweet.retweeted %}</a>{% endif %}
    </div>
</div>
